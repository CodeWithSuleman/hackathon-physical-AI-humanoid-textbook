<?xml version="1.0"?>
<sdf version="1.6">
  <world name="simple_humanoid_world">

    <!-- Light Source -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Ground Plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Basic Physics Configuration -->
    <physics name="default_physics" default="0" type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
      <real_time_update_rate>1000</real_time_update_rate>
      <ode>
        <solver>
          <type>quick</type>
          <iters>50</iters>
          <precon_iters>0</precon_iters>
          <sor>1.3</sor>
          <rms_error_tolerance>0.0</rms_error_tolerance>
        </solver>
        <constraints>
          <cfm>0.0</cfm>
          <erp>0.2</erp>
          <contact_max_correcting_vel>100.0</contact_max_correcting_vel>
          <contact_surface_layer>0.001</contact_surface_layer>
        </constraints>
      </ode>
    </physics>

    <!-- Gravity -->
    <gravity>0 0 -9.8</gravity>

    <!-- Simple Humanoid Model (based on Module 1's URDF concepts) -->
    <model name="simplified_humanoid">
      <link name="base_link">
        <inertial>
          <mass>10.0</mass>
          <pose>0 0 0.5 0 0 0</pose>
          <inertia>
            <ixx>1.0</ixx><ixy>0.0</ixy><ixz>0.0</ixz>
            <iyy>1.0</iyy><iyz>0.0</iyz>
            <izz>1.0</izz>
          </inertia>
        </inertial>
        <visual name="base_visual">
          <pose>0 0 0.5 0 0 0</pose>
          <geometry><box><size>0.2 0.2 1.0</size></box></geometry>
          <material><script><uri>file://media/materials/scripts/gazebo.material</uri><name>Gazebo/Blue</name></script></material>
        </visual>
        <collision name="base_collision">
          <pose>0 0 0.5 0 0 0</pose>
          <geometry><box><size>0.2 0.2 1.0</size></box></geometry>
        </collision>
      </link>

      <link name="head_link">
        <inertial>
          <mass>1.0</mass>
          <pose>0 0 0.1 0 0 0</pose>
          <inertia>
            <ixx>0.1</ixx><ixy>0.0</ixy><ixz>0.0</ixz>
            <iyy>0.1</iyy><iyz>0.0</iyz>
            <izz>0.1</izz>
          </inertia>
        </inertial>
        <visual name="head_visual">
          <pose>0 0 0.1 0 0 0</pose>
          <geometry><sphere><radius>0.15</radius></sphere></geometry>
          <material><script><uri>file://media/materials/scripts/gazebo.material</uri><name>Gazebo/Red</name></script></material>
        </visual>
        <collision name="head_collision">
          <pose>0 0 0.1 0 0 0</pose>
          <geometry><sphere><radius>0.15</radius></sphere></geometry>
        </collision>
      </link>

      <joint name="base_to_head_joint" type="revolute">
        <pose>0 0 1.05 0 0 0</pose>
        <parent>base_link</parent>
        <child>head_link</child>
        <axis>
          <xyz>0 0 1</xyz>
          <limit lower="-1.57" upper="1.57"/>
        </axis>
      </joint>

      <!-- Simplified Arm Link and Joint (Left) -->
      <link name="left_arm_link">
        <inertial>
          <mass>0.5</mass>
          <pose>0 0 -0.2 0 0 0</pose>
          <inertia>
            <ixx>0.05</ixx><ixy>0.0</ixy><ixz>0.0</ixz>
            <iyy>0.05</iyy><iyz>0.0</iyz>
            <izz>0.05</izz>
          </inertia>
        </inertial>
        <visual name="left_arm_visual">
          <pose>0 0 -0.2 0 0 0</pose>
          <geometry><cylinder><radius>0.04</radius><length>0.4</length></cylinder></geometry>
          <material><script><uri>file://media/materials/scripts/gazebo.material</uri><name>Gazebo/Green</name></script></material>
        </visual>
        <collision name="left_arm_collision">
          <pose>0 0 -0.2 0 0 0</pose>
          <geometry><cylinder><radius>0.04</radius><length>0.4</length></cylinder></geometry>
        </collision>
      </link>

      <joint name="base_to_left_arm_joint" type="revolute">
        <pose>0 0.15 0.8 0 0 0</pose> <!-- Positioned on the left side of the base -->
        <parent>base_link</parent>
        <child>left_arm_link</child>
        <axis>
          <xyz>1 0 0</xyz>
          <limit lower="-1.57" upper="1.57"/>
        </axis>
      </joint>

    </model>

  </world>
</sdf>